<title>Vinyl : <%= reviews[0].title %></title>

<%- include partials/header.ejs %>


  <div class='post-column'>
    <h1><%= reviews[0].title %></h1>
    <em>by <%= reviews[0].artist %></em>

    <div class="row-space-between">
      <h2>Reviews</h2>
      <% if (loggedIn) { %>
      <a href="/albums/<%= reviews[0].title %>/reviews/new" class="new-review-button"> Add Review </a>
      <% } %>
    </div>

    <% if (reviews[0].id) {
      reviews.forEach( review => { %>
        <div class="box green-box">
          <div class="red-box">
            <div class="row-space-between">
              <h3> <a href="/albums/<%= review.id%>" > <%= review.id %> </a> </h3>
              <p> <%= moment(review.created_at).format('MMM-DD-YY') %> </p>
            </div>
            <p> <%= review.content %> </p>
            <p> by <a href="/users/<%= review.username%>" > <%= review.username %> </a> </p>
          </div>
          <% if (reviews[0].username === username) { %>
            <img id="<%= review.id%>" src="/trashcan.png" alt="trashcan" class="trashcan">
          <% } %>
        </div>
      <% })
    } else { %>
      <p class='box green-box'> This album has ZERO reviews </p>
    <% } %>
  </div>

<%- include partials/footer.ejs %>
